  "paths": {
    "/users/{userId}/like/{eventId}": {
      "put": {
        "description": "Постановка лайка событию.\n- Лайк ставится только опубликованному событию \n- Лайк могут ставить любые пользователи\n- 1 Лайк - это 1 пункт рейтинга\n- 1 пользователь может дать не более 1ого пункта рейтинга",
        "operationId": "addLike",
        "parameters": [
          {
            "description": "id пользователя",
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "description": "id события",
            "in": "path",
            "name": "eventId",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "summary": "Постановка лайка",
        "tags": [
          "Likes"
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LikeDto"
                }
              }
            },
            "description": "лайк успешно проставлен"
          },
          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            },
            "description": "Запрос составлен некорректно"
          },
          "404": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            },
            "description": "Событие или пользователь не найдены."
          },
          "409": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            },
            "description": "Событие не опубликовано, либо попытка одним пользователем добавить рейтинга больше, чем на 1"
          }
        }
      },
      "delete": {
        "description": "Удаление лайка",
        "operationId": "deleteLike",
        "parameters": [
          {
            "description": "id пользователя",
            "in": "path",
